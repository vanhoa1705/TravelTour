<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UpdateTour">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <LinearLayout
                android:id="@+id/linearListInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/siName"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="@string/blank"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/siLocation"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="date"
                    android:hint="Choose from map..."
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvChilds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Service Type Id"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/siSTID"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="date"
                    android:textSize="17dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvminCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Min Cost"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/siminCost"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="date"
                    android:textSize="17dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/tvmaxCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Max Cost"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/simaxCost"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="date"
                    android:textSize="17dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comments:"
                        android:textSize="70px"
                        android:textColor="@android:color/black"/>
                    <com.example.yourtour.NonScrollListView
                        android:id="@+id/silvcomment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/si_cmt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Comments"
                            android:textSize="50px"/>
                        <RatingBar
                            android:id="@+id/si_ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="1.0"
                            android:rating="2.0" />
                        <Button
                            android:id="@+id/si_send"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:background= "@drawable/boder_register"
                            android:backgroundTint="#4286F4"
                            android:text="Send"
                            android:textColor="#FFFFFF"
                            android:textSize="17sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
